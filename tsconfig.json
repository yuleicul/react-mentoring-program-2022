{
  // All ts warnings or errors are coming from `typescript`
  "compilerOptions": {
    // https://devblogs.microsoft.com/typescript/announcing-typescript-4-1/#jsx-factories
    "jsx": "react-jsx",

    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,

    // ? Module declared with 'export =', and can only be used with a default import when using the 'esModuleInterop' flag.
    "esModuleInterop": true
  }
}
